<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Data Reports â€¢ FreshMart</title>
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
  <nav class="site-nav">
    <div class="nav-container">
      <a href="/" class="logo">FreshMart</a>
      <div class="nav-right">
        <a href="/" class="nav-link">Shop</a>
        <a href="/customer/orders" class="nav-link">Orders</a>
        <% if (typeof session !== 'undefined' && session && session.role && ['employee', 'admin'].includes(session.role.toLowerCase())) { %>
        <a href="/reports" class="nav-link">Reports</a>
        <% } %>
        <a href="/bag" class="bag-link"><span>ðŸ›’</span><span>Cart</span><span id="bagCount" class="badge">0</span></a>
        <a href="/logout" class="nav-link">Logout</a>
      </div>
    </div>
  </nav>

  <main class="account-container">
    <div class="account-header">
      <div>
        <div class="account-title">Data Reports</div>
        <div class="account-subtitle">Filter sales and view aggregates by product, department, or employee</div>
      </div>
    </div>

    <div class="account-grid">
      <aside class="sidebar">
        <a href="/customer" class="sidebar-item">ðŸ“Š Dashboard</a>
        <a href="/customer/orders" class="sidebar-item">ðŸ“¦ Orders</a>
        <div class="sidebar-item active">ðŸ“ˆ Reports</div>
      </aside>

      <section class="content-area">
        <form id="reportForm" class="reports-form">
          <div class="filters-row">
            <div class="field">
              <label for="date_from">Date from</label>
              <input id="date_from" name="date_from" type="date">
            </div>
            <div class="field">
              <label for="date_to">Date to</label>
              <input id="date_to" name="date_to" type="date">
            </div>
            <div class="field">
              <label for="department_id">Department</label>
              <select id="department_id" name="department_id">
                <option value="">All</option>
                <% for (let d of departments) { %><option value="<%= d.DepartmentID %>"><%= d.Name %></option><% } %>
              </select>
            </div>
            <div class="field">
              <label for="employee_id">Employee</label>
              <select id="employee_id" name="employee_id">
                <option value="">All</option>
                <% for (let e of employees) { %><option value="<%= e.EmployeeID %>"><%= e.Name %></option><% } %>
              </select>
            </div>
            <div class="field">
              <label for="group_by">Group by</label>
              <select id="group_by" name="group_by">
                <option value="product">Product</option>
                <option value="department">Department</option>
                <option value="employee">Employee</option>
              </select>
            </div>
            <div class="field">
              <label for="min_qty">Min units</label>
              <input id="min_qty" name="min_qty" type="number" min="0" value="0">
            </div>
          </div>

          <div class="actions-row">
            <button type="button" id="runBtn" class="btn primary">Run</button>
            <button type="button" id="csvBtn" class="btn secondary">Export CSV</button>
          </div>
        </form>

        <div id="reportResults" class="results-card"></div>
      </section>
    </div>
  </main>

  <script>
    window.CURRENT_USER = {
      id: <%- JSON.stringify(typeof session !== 'undefined' && session ? session.user_id : null) %>,
      role: <%- JSON.stringify(typeof session !== 'undefined' && session ? session.role || '' : '') %>
    };
  </script>
  <script src="/static/js/main.js"></script>
</body>
</html>
