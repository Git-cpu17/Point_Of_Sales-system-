<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Shopping Lists - FreshMart</title>
  <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
  <nav class="site-nav">
    <div class="nav-container">
      <a href="/" class="logo">FreshMart</a>
      <div class="nav-right">
        <a href="/" class="nav-link">Shop</a>
        <a href="/customer/orders" class="nav-link">Orders</a>
        <a href="/shopping-lists" class="nav-link active">Shopping Lists</a>
        <% if (typeof session !== 'undefined' && session && session.role && ['employee', 'admin'].includes(session.role.toLowerCase())) { %>
          <a href="/reports" class="nav-link">Reports</a>
        <% } %>
        <a href="/bag" class="bag-link">
          <span>ðŸ›’</span><span>Cart</span><span id="bagCount" class="badge">0</span>
        </a>
        <a href="/logout" class="nav-link">Logout</a>
      </div>
    </div>
  </nav>

  <div id="listContainer" class="sl-container">
    <h1>Shopping Lists</h1>

    <div class="sl-toolbar">
      <label for="listSelect" class="sr-only">Choose list</label>
      <select id="listSelect" class="sl-select"></select>

      <button id="newListBtn" class="btn btn-primary">+ New List</button>
      <button id="deleteListBtn" class="btn btn-danger" disabled>Delete List</button>
      <button id="addListToCartBtn" class="btn btn-primary">Move List to Cart</button>
    </div>

    <p id="emptyListText" style="display:none;"></p>
    <div id="listTableWrap"></div>
  </div>

  <script src="/static/js/main.js"></script>
</body>
</html>
